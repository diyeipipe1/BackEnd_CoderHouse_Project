<h1>Products (Usa a√∫n FileSystem, para mongo es postman)</h1>
{{#if products.length}}
        <table>
            <thead>
                <tr>
                    <th>id</th>
                    <th>title</th>
                    <th>description</th>
                    <th>price</th>
                    <th>thumbnail</th>
                    <th>code</th>
                    <th>stock</th>
                    <th>category</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>{{price}}</td>
                        <td>{{thumbnail}}</td>
                        <td>{{code}}</td>
                        <td>{{stock}}</td>
                        <td>{{category}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
{{else}}
    <p>No products to show</p>
{{/if}}