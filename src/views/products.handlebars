<h1>Products</h1>
<div>
    {{#if payload.length}}
        <table>
            <thead>
                <tr>
                    <th>id</th>
                    <th>title</th>
                    <th>description</th>
                    <th>price</th>
                    <th>thumbnail</th>
                    <th>code</th>
                    <th>stock</th>
                    <th>category</th>
                    <th>Add to Cart</th>
                </tr>
            </thead>
            <tbody>
                {{#each payload}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>{{price}}</td>
                        <td>{{thumbnail}}</td>
                        <td>{{code}}</td>
                        <td>{{stock}}</td>
                        <td>{{category}}</td>
                        <td><button onclick={addToCart("{{id}}")}>Add</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/if}}
</div>
<div>
    {{#if hasPrevPage}}
        <a href={{prevLink}}><button>Anterior</button></a>
    {{/if}}
    {{#if hasNextPage}}
        <a href={{nextLink}}><button>Siguiente</button></a>
    {{/if}}
</div>

<script src="/js/products.js"></script>
